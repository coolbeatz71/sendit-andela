  "securityDefinitions": {
    "JsonWebToken": {
      "type": "apiKey",
      "name": "Bearer Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "parcel-info": {
      "type": "object",
      "properties": {
        "parcelName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "pickupLocation": {
          "type": "string"
        },
        "destination": {
          "type": "string"
        },
        "weight": {
          "type": "string"
        }
      }
    },
    "parcel-destination": {
      "type": "object",
