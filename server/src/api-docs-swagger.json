        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "parcelId",
            "in": "path",
            "description": "ID of the order that needs to be updated",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
